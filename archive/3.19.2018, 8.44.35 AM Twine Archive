<tw-storydata name="himalayas" startnode="1" creator="Twine" creator-version="2.1.3" ifid="CBBD5078-7C03-44B4-A2C4-80B5B440807D" format="Harlowe" format-version="2.0.1" options="" hidden><style role="stylesheet" id="twine-user-stylesheet" type="text/twine-css">




